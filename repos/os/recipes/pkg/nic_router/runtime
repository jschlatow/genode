<runtime ram="10M" caps="300" binary="nic_router">

	<requires> <nic/> </requires>
	<provides> <nic/> <uplink/> </provides>

	<config verbose_domain_state="yes">
		<default-policy domain="default" />
		<policy label_suffix="nic_drv -> " domain="uplink"  />
		<domain name="uplink">
			<udp-forward port="12345" to="10.0.1.2" domain="default"/>
		</domain>
		<domain name="default" interface="10.0.1.1/24">
			<dhcp-server ip_first="10.0.1.2"
			             ip_last="10.0.1.2"
			             dns_config_from="uplink"/>
			<tcp dst="0.0.0.0/0"><permit-any domain="uplink"/></tcp>
			<udp dst="0.0.0.0/0"><permit-any domain="uplink"/></udp>
			<icmp dst="0.0.0.0/0" domain="uplink"/>
		</domain>
	</config>

	<content>
		<rom label="ld.lib.so"/>
		<rom label="nic_router"/>
	</content>

</runtime>
