<runtime ram="40M" caps="2000" binary="init">

	<requires> <timer/> </requires>

	<events>
		<timeout meaning="failed" sec="60" />
		<log meaning="succeeded">
			[init] child "nic_perf" exited with exit value 0
		</log>
	</events>

	<content>
		<rom label="ld.lib.so"/>
		<rom label="libc.lib.so"/>
		<rom label="libm.lib.so"/>
		<rom label="posix.lib.so"/>
		<rom label="vfs.lib.so"/>
		<rom label="vfs_lwip.lib.so"/>
		<rom label="vfs"/>
		<rom label="nic_router"/>
		<rom label="test-udp"/>
		<rom label="nic_perf"/>
	</content>

	<config>
		<parent-provides>
			<service name="ROM"/>
			<service name="PD"/>
			<service name="RM"/>
			<service name="CPU"/>
			<service name="LOG"/>
			<service name="Timer"/>
		</parent-provides>
		<default-route>
			<service name="Nic"> <child name="nic_router"/> </service>
			<any-service> <any-child/> <parent/> </any-service>
		</default-route>
		<default caps="500"/>

		<start name="send">
			<binary name="test-udp"/>
			<resource name="RAM" quantum="10M"/>
			<config>
				<arg value="send"/>
				<arg value="10.0.2.2"/>
				<libc stdout="/log" stderr="/log" socket="/socket"/>
				<vfs>
					<log/>
					<dir name="socket">
						<lwip dhcp="yes"/>
					</dir>
				</vfs>
			</config>
		</start>

		<start name="nic_router">
			<resource name="RAM" quantum="10M"/>
			<provides>
				<service name="Nic"/>
				<service name="Uplink"/>
			</provides>
			<config verbose_packet_drop="yes" verbose_packets="no" verbose="no" max_packets_per_signal="150">
				<policy label_suffix="send -> lwip" domain="sender"/>
				<policy label_suffix="nic_perf -> " domain="receiver"/>

				<domain name="sender" interface="10.0.1.1/24">
					<dhcp-server ip_first="10.0.1.2" ip_last="10.0.1.2"/>
					<ip dst="0.0.0.0/0" domain="receiver"/>
				</domain>

				<domain name="receiver" interface="10.0.2.1/24">
					<dhcp-server ip_first="10.0.2.2" ip_last="10.0.2.2"/>
				</domain>
			</config>
		</start>

		<start name="nic_perf">
			<resource name="RAM" quantum="10M"/>
			<provides>
				<service name="Uplink"/>
				<service name="Nic"/>
			</provides>
			<config period_ms="5000" count="16">
				<nic-client/>
			</config>
		</start>
	</config>
</runtime>
